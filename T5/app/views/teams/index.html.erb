<p style="color: green"><%= notice %></p>

<h1 class="text-center fw-bold mb-4">Teams</h1>

<div class="d-flex flex-column align-items-center w-100" id="teams">
  <% @teams.each do |team| %>
    <div class="d-flex flex-column align-items-center rounded-4 bg-c5 w-50 py-3 mb-2">
      <%= render team %>
      <p>
        <%= link_to "Show this team", team %>
      </p>
    </div>
  <% end %>
  <button type="button" class="btn btn-primary btn-lg rounded-4 align-self-center">
    <a class="text-black text-decoration-none px-4" href="/teams/new">New Team</a>
  </button>
</div>
