<p style="color: green"><%= notice %></p>

<h1 class="text-center fw-bold mb-4">Players</h1>

<div class="d-flex flex-column align-items-center w-100" id="players">
  <% @players.each do |player| %>
    <div class="d-flex flex-column align-items-center rounded-4 bg-c5 w-50 py-3 mb-2">
      <%= render player %>
      <p>
        <%= link_to "Show this player", player %>
      </p>
    </div>
  <% end %>
  <button type="button" class="btn btn-primary btn-lg rounded-4 align-self-center">
    <a class="text-black text-decoration-none px-4" href="/players/new">New Player</a>
  </button>
</div>
